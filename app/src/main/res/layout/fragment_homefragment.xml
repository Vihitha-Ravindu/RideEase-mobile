<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homefragment"
    android:background="@drawable/backgroundt">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/getloan_home"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Get Loan"
        android:textColor="#FFFFFF"
        android:background="#FF5722"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"/>

    <Button
        android:id="@+id/dayPassButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Get Day Pass"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        app:layout_constraintTop_toBottomOf="@+id/getloan_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/addRouteButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Add Route"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        app:layout_constraintTop_toBottomOf="@+id/dayPassButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/payment"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Payment"
        android:textColor="#FFFFFF"
        android:background="#FF9800"
        app:layout_constraintTop_toBottomOf="@+id/addRouteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/paymentr"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Payment History"
        android:textColor="#FFFFFF"
        android:background="#9C27B0"
        app:layout_constraintTop_toBottomOf="@+id/payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
