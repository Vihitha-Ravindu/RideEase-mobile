<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Route.AddRoute">
    <EditText
        android:id="@+id/editTextRouteSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Route Source"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextRouteDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Route Destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRouteSource" />

    <EditText
        android:id="@+id/editTextRouteId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Route ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRouteDestination" />

    <EditText
        android:id="@+id/editTextFare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRouteId" />

    <Button
        android:id="@+id/buttonAddRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Route"
        app:layout_constraintTop_toBottomOf="@+id/editTextFare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>